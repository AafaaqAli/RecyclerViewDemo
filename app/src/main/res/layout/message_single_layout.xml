<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding4">

    <LinearLayout
        android:id="@+id/messageSingleLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/custom_toast_height"
        android:background="@drawable/incoming_speech_bubble_simple_agent"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone"
        android:weightSum="10">


        <TextView
            android:id="@+id/chatText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:padding="0dp"
            android:textColor="#444444"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chatTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding10"
                android:textSize="@dimen/text_small" />

            <ImageView
                android:id="@+id/fileDownload"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_file_download_black_24dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/messageSingleLayout_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/custom_toast_height"
        android:layout_marginTop="@dimen/padding8"
        android:background="@drawable/outgoing_speech_bubble_simple_agent"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone"
        android:weightSum="10">

        <TextView
            android:id="@+id/chatText_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/padding10"
            android:padding="0dp"
            android:singleLine="false"
            android:textColor="#444444"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chatText_1"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:paddingRight="@dimen/padding10">

            <TextView
                android:id="@+id/chatTime_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small" />

            <ImageView
                android:id="@+id/fileDownload_1"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_file_download_black_24dp"
                android:visibility="gone" />

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
